{
    "manifest_version": 2,

    "name": "Container Action Menu",
    "description": "",
    "version": "0.1",

    "browser_specific_settings": {
        "gecko": {
            "id": "test@test.test"
        }
    },

    "permissions": [
        "tabs",
        "contextualIdentities",
        "cookies",
        "webNavigation",
        "storage",
        "notifications"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "page_action": {
        "default_popup": "page_action.html",
        "show_matches": ["<all_urls>"]
    }
}